{
  "name": "@ghost-vpn/desktop",
  "version": "1.0.0",
  "description": "Ghost VPN Desktop Application",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development electron .",
    "build": "npm run build:all",
    "build:all": "npm run build:windows && npm run build:mac && npm run build:linux",
    "build:windows": "electron-builder --windows",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "ninja.whistle.ghostvpn",
    "productName": "Ghost VPN",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.icns",
      "darkModeSupport": true
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "icon": "assets/icon.png",
      "category": "Network"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "@ghost-vpn/core": "workspace:*",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.0",
    "node-sudo": "^0.1.4",
    "auto-launch": "^5.0.6"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "cross-env": "^7.0.3"
  },
  "author": "Ghost Whistle Team",
  "license": "MIT"
}

