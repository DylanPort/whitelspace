# Ghost Whistle Production Environment Variables
# Copy this file to .env and fill in your values

# Solana RPC Endpoint (Get your own at helius.dev or quicknode.com)
# IMPORTANT: Do NOT use the public endpoint for production!
RPC_URL=https://mainnet.helius-rpc.com/?api-key=YOUR_API_KEY_HERE

# Supabase Configuration (Optional - for stats tracking)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-service-role-key-here

# Node Environment
NODE_ENV=production

# Signaling Server (if deploying separately)
SIGNALING_SERVER=wss://your-signaling-server.com

