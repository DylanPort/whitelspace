{
  "name": "whistle",
  "version": "1.0.0",
  "description": "Ghost Whistle - Privacy Node Network",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently --names \"MAIN,DASHBOARD,API\" --prefix-colors \"cyan,magenta,yellow\" \"npm run dev:main\" \"npm run dev:dashboard\" \"npm run dev:api\"",
    "dev:main": "node server.js",
    "dev:dashboard": "cd whistle-dashboard && npm run dev",
    "dev:api": "cd whistlenet/provider/api && npm run mainnet",
    "start": "node server.js",
    "signaling": "node backend/signaling-server.js",
    "signaling-calls": "node backend/signaling-server-calls.js",
    "deploy": "anchor deploy --provider.cluster mainnet",
    "distribute": "node distribute-rewards-local.js",
    "build:node-runner": "pkg backend/user-node-client.js --targets node18-linux-x64,node18-win-x64,node18-macos-x64 --output ./infrastructure/dist/ghost-node-runner",
    "build:linux": "pkg backend/user-node-client.js --targets node18-linux-x64 --output ./infrastructure/dist/ghost-node-runner-linux",
    "build:windows": "pkg backend/user-node-client.js --targets node18-win-x64 --output ./infrastructure/dist/ghost-node-runner-win.exe",
    "build:macos": "pkg backend/user-node-client.js --targets node18-macos-x64 --output ./infrastructure/dist/ghost-node-runner-macos"
  },
  "keywords": [
    "privacy",
    "solana",
    "webrtc",
    "p2p"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@capacitor/android": "^7.4.4",
    "@capacitor/cli": "^7.4.4",
    "@capacitor/core": "^7.4.4",
    "@netlify/blobs": "^8.1.0",
    "@solana/spl-token": "^0.4.7",
    "@solana/web3.js": "^1.95.3",
    "@supabase/supabase-js": "^2.76.1",
    "bs58": "^5.0.0",
    "compression": "^1.8.1",
    "concurrently": "^9.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "node-fetch": "^2.7.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@coral-xyz/anchor": "^0.29.0",
    "pkg": "^5.8.1"
  },
  "pkg": {
    "assets": [
      "node_modules/**/*"
    ],
    "outputPath": "dist"
  }
}
